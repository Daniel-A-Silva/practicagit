<div class="container" style="margin-top: 100px;">
  <div class="row">
    <div class="col text-end">
      <span>Hola {{usuario}}!</span>
      <a href="/" class="btn btn-primary">Ir al inicio</a>
      <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesión</a>
    </div>
  </div>

  <div class="row">
    {{#each productos}}
    <div class="col-6 col-md-4 col-lg-4 mb-4">
      <div class="zoom-container text-center">
        <img src="{{this.imagen}}" 
             class="img-zoom img-cuadrada w-50 rounded shadow"
             alt="{{this.nombre}}"
             data-bs-toggle="modal"
             data-bs-target="#modalProducto{{this.id}}">

        <p class="mt-2">{{this.nombre}}</p>
        <p>${{this.precio}}</p>
      </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modalProducto{{this.id}}" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">{{this.nombre}}</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
          </div>
          <div class="modal-body text-center">
            <img src="{{this.imagen}}" class="img-fluid rounded mb-3" alt="{{this.nombre}}">
            <p><strong>Precio:</strong> ${{this.precio}}</p>
            <p>{{this.descripcion}}</p>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <div class="row">
    <div class="col-7">
      <h3>Listado de Productos</h3>
    </div>
    <div class="col-5 text-end">
      <a href="/admin/productos/agregar" class="btn btn-success">Nuevo</a>
    </div>
  </div>

  <table class="table table-striped mt-4">
    <thead>
      <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Descripción</th>
        <th class="text-end">Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each productos}}
      <tr>
        <td>{{id}}</td>
        <td>{{nombre}}</td>
        <td>{{precio}}</td>
        <td>{{descripcion}}</td>
        <td class="text-end">
          <a href="/admin/productos/editar/{{id}}" class="btn btn-sm btn-primary">Editar</a>
          <a href="/admin/productos/eliminar/{{id}}" class="btn btn-sm btn-danger">Eliminar</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
