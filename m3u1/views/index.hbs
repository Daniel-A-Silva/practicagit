<div class="container" style="margin-top: 10px;">
  {{#if usuario}}
    <div class="text-end mt-3">
      <a href="/admin/productos" class="btn btn-primary">Administrar productos</a>
    </div>
  {{/if}}
</div>

<div class="container my-5">
  <h2 class="text-center mb-4">Modelos Realizados.</h2>
  <div class="row">
    {{#each productos}}
    <div class="col-6 col-md-4 col-lg-4 mb-4">
      <div class="zoom-container text-center">
        <!-- Imagen con trigger al modal -->
        <img src="{{this.imagen}}" 
             class="img-zoom img-cuadrada w-50 rounded shadow"
             alt="{{this.nombre}}"
             data-bs-toggle="modal"
             data-bs-target="#modalProducto{{this.id}}">

        <p class="mt-2"><strong>{{this.nombre}}</strong></p>
        <p>${{this.precio}}</p>
        <p>{{this.descripcion}}</p>
      </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modalProducto{{this.id}}" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">{{this.nombre}}</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
          </div>
          <div class="modal-body text-center">
            <img src="{{this.imagen}}" class="img-fluid rounded mb-3" alt="{{this.nombre}}">
            <p><strong>Precio:</strong> ${{this.precio}}</p>
            <p>{{this.descripcion}}</p>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
